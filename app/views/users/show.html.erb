<p id="notice"><%= notice %></p>

<% if @user.flyer.attached? %>
  <%= image_tag(@user.flyer, width: "400px", data: { target: "#myModal", toggle: "modal"}) %>
<% end %>

<br>
<br>
<br>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="myModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <% if @user.flyer.attached? %>
        <%= image_tag(@user.flyer, width: "800px") %>
      <% end %>
    </div>
  </div>
</div>

<h1> <%=@user.name%> </h1>
<h5><%=@user.location%></h5>
<h5>Last access: <%= User.find(params[:id]).current_sign_in_at%></h5>
<%=@user.biography%>
<% if @user.user.id == current_user.id %>
  <div align="right">
    <%= link_to "Edit profile", edit_user_path, class: ["btn", "btn-primary"] %>
  </div>
<%end %>


<h6>Invitations</h6>

<table class="table">
  <thead class="thead-light">
  <tr>
    <th scope="col">Event</th>
    <th scope="col">Date</th>
    <th scope="col">Location</th>
    <th scope="col">Role</th>
  </tr>
  </thead>
  <tbody>
  <% @invite.uniq.each do |event| %>
    <tr>
      <th scope="row"><%= link_to event.name, events_path(event.id) %></th>
      <th scope="row"><%= event.date %></th>
      <th scope="row"><%= event.location %></th>
      <% if event.user_id == current_user.id %>
        <th scope="row">
          <p style="color:#21bf40">Owner</p>
        </th>
      <% else %>
        <th scope="row">Guest</th>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>