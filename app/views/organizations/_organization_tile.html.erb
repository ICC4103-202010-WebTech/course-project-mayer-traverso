<div class="col-md-0">
  <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
    <div class="col p-4 d-flex flex-column position-static">
      <h5 class="card-title"><%= org.name %></h5>
      <p class="card-text"><%= org.description %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group" align="bottom">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", org %></button>
          <%if Organization.find(org.id).organization_members.where(user_id: current_user.id).distinct.map {|x| x.user_role}.include? "administrator" or current_user.primary_role %>
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_organization_path(org) %></button>
        <% end %>
        </div>
      </div>
      <br>
    </div>
    <div class="col-auto d-none d-lg-block">
      <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
        <% if org.flyer.attached? %>
          <%= image_tag(org.flyer, width: "400px", data: { target: "#myModal", toggle: "modal"}) %>
        <% else %>
          <%= image_tag("thumbnail.svg", width: "400px", data: { target: "#myModal", toggle: "modal"}) %>
        <% end %>
      </svg>
    </div>
  </div>
</div>