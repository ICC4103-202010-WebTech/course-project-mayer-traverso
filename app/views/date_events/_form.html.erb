<%= form_with(model: DateEvent.new, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :date %>
    <%= form.datetime_local_field :date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.hidden_field :event_id, value: event_id %>
  </div>
  <div class="actions">
    <%= form.submit "Add date", class: ["btn", "btn-primary"] %>
  </div>
<% end %>
