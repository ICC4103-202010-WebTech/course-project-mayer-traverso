<%= form_with model: UserGuest.new do |form| %>
  <div class="form-group">
    <%= form.label :user %>
    <%= form.collection_select(:user_id, User.joins(:user_guests).where.not(user_guests: {event_id: event_id}).order(username: :asc).uniq, :id, :username, { class: "form-control" }) %>
  </div>
  <div class="form-group">
    <%= form.hidden_field :event_id, value: event_id %>
  </div>
  <div class="form-group mt-2">
    <%= form.submit "Invite", class: ["btn", "btn-primary"] %>
  </div>
<% end %>
