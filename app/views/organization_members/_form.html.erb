<%= form_with model: OrganizationMember.new do |form| %>
  <div class="form-group">
    <%= form.label :user %>
    <%= form.collection_select(:user_id, User.all.uniq, :id, :username, { class: "form-control" }) %>
  </div>
  <div class="form-group">
    <%= form.hidden_field :organization_id, value: org_id %>
  </div>
  <div class="form-group mt-2">
    <%= form.submit "Invite", class: ["btn", "btn-primary"] %>
  </div>
<% end %>
