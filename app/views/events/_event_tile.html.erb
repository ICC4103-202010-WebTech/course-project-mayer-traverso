<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <% if Event.find(id).flyer.attached? %>
      <%= link_to image_tag(Event.find(id).flyer, width: "100%"), event_path(id) %>
    <%else %>
      <%= link_to image_tag("thumbnail.svg", width: "100%", hight: "10%"), event_path(id) %>
    <% end %>
    <div class="card-body">
      <p class="card-text"><%= link_to Event.find(id).name, event_path(id) %></p>
      <p class="card-text">Created by: <%= Event.find(id).user.username %></p>
      <% if Event.find(id).date != nil %>
        <p class="card-text"><%= Event.find(id).date %></p>
      <% end %>
      <p class="card-text"><%= Event.find(id).description %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", event_path(id) %></button>
          <% if Event.find(id).user.id == current_user.id %>
            <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_event_path(id) %></button>
            <button type="button" class="btn btn-sm btn-outline-danger">Delete</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>