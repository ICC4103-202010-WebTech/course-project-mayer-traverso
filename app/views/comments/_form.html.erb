<div class="row ml-0">
  <%= form_with model: @comment do |form| %>
    <div class="form-group">
      <%= form.label :text %>
      <%= form.text_area :text, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.hidden_field :user_id, value: 2 %>
    </div>
    <div class="form-group">
      <%= form.hidden_field :event_id, value: event_id %>
    </div>
    <div class="form-group mt-2">
      <%= form.submit "Add comment", class: ["btn", "btn-outline-dark btn-ms"], controller: "comments", action: "new"%>
    </div>
  <% end %>
</div>