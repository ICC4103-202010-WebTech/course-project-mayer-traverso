<p id="notice"><%= notice %></p>
<div class ="messaging">
  <div class="inbox_msg">
    <div class="inbox_people">
      <div class="headind_srch">
        <div class="recent_heading">
          <h4><%= @user.username%></h4>
          <%if @user.current_sign_in_at != nil %>
            <a>last active at <%=time_tag(@user.current_sign_in_at)%> </a>
          <%end%>

        </div>
        </div>
      </div>
      <div class="mesgs">
        <div class="msg_history">
          <% @messages.each do |message| %>
            <% if message[0] == current_user.username %>
              <div class="outgoing_msg">
                <div class="sent_msg">
                  <p><%= message[1] %></p>
                  <span class="time_date"> <%= time_ago_in_words(message[2]) %></span></div>
              </div>

            <% else %>
              <div class="incoming_msg">
                <div class="incoming_msg_img"><img src="https://ptetutorials.com/images/user-profile.png" alt="sunil"></div>
                <div class="received_msg">
                  <div class="received_withd_msg">
                    <p><%= message[1] %></p>
                    <span class="time_date"><%= time_ago_in_words(message[2]) %></span></div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
     </div>

        <%= render partial: "messages/form",
                   locals: {
                       user_id: params[:id],
                   } %>

  </div>
</div>


