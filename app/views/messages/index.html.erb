<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <ul class="list-group">
      <% @users.each do |id| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to User.find(id).username, message_path(id) %>
          <span class="badge badge-primary badge-pill">2</span>
        </li>
      <% end %>
    </ul>
  </tbody>
</table>

<br>
